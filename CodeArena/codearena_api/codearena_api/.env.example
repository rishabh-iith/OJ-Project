# === Django / Backend (.env) ===
# Security
SECRET_KEY=change-me-in-prod
DEBUG=1                        # 1 in dev, 0 in prod
ALLOWED_HOSTS=localhost,127.0.0.1,backend.codearena.icu

# CORS
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://codearena.icu

# Database (Mongo)
MONGODB_URI=mongodb://127.0.0.1:27017
MONGO_DB_NAME=codearena_db

# Executor service (backend talks to local executor on EC2)
EXECUTOR_URL=http://127.0.0.1:8001/execute

# HTTPS redirect (set to 1 only in prod behind Nginx/SSL)
SECURE_SSL_REDIRECT=0

# Other keys (placeholders only)
GOOGLE_API_KEY=
